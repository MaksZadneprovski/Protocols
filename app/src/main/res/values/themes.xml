<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Protokols" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/c1</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Название протокола -->
    <style name="Title" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:textAllCaps">true</item>
    </style>
               <!-- tv -->
    <style name="TvForEt" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
               <!-- et -->
    <style name="EtForData" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">250dp</item>
        <item name="elevation">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:inputType">textPersonName|textCapCharacters</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="EtForDataNew" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">250dp</item>
        <item name="elevation">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/c2</item>
        <item name="boxStrokeColor">@color/c1</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:inputType">textPersonName|textCapCharacters</item>
    </style>

    <!-- Линия подчеркивания -->
    <style name="Line" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- radio -->
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- EditText сопротивления -->
    <style name="etTableRow" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:ems">5</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/text14</item>
    </style>
    <!-- Линия подчеркивания -->
    <style name="tvTableRow" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!--Кнопка выпадающего поля -->
    <style name="DropBtn" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="srcCompat">@drawable/ic_baseline_arrow_drop_down_24</item>
    </style>
    <!-- Поле заметки-->
    <style name="Notes" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:ems">15</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>
    <style name="Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        android:theme="?attr/actionBarTheme"
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/grey</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
</resources>