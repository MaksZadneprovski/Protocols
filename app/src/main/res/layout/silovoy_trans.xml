<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWork"
                style="@style/Title"
                android:background="@drawable/bg_title"
                android:text="Испытание\nсилового\nтрансформатора"
                android:textAlignment="center" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ConstrLayoutObject"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/LL1"
                    style="@style/Line"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLObject"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etObject"
                        style="@style/textInputEt"
                        android:hint="Объект" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLDate"
                    style="@style/inTextForData"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLObject">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textInputEt"
                        android:id="@+id/etDate"
                        android:hint="Дата" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etTemperature"
                    style="@style/inTextForData"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLDate">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textInputEt"
                        android:hint="Температура, °С" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/LL2"
                    style="@style/Line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etTemperature" />

                <TextView
                    android:id="@+id/tv1"
                    style="@style/TvForEt"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Паспортные данные"
                    android:textSize="@dimen/text18"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LL2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportType"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportType"
                        style="@style/textInputEt"
                        android:hint="Тип" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportZavNumber"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLPasportType">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportZavNumber"
                        style="@style/textInputEt"
                        android:hint="Заводской номер" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportPower"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLPasportZavNumber">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportPower"
                        style="@style/textInputEt"
                        android:hint="Мощность, кВА" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportVoltage"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLPasportPower">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportVoltage"
                        style="@style/textInputEt"
                        android:hint="Напряжение, кВ" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportCurrent"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLPasportVoltage">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportCurrent"
                        style="@style/textInputEt"
                        android:hint="Ток, А" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportVoltageKz"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLPasportCurrent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportVoltageKz"
                        style="@style/textInputEt"
                        android:hint="U, %" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etLPasportYearOfManufacture"
                    style="@style/inTextForData"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etLPasportVoltageKz">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasportYearOfManufacture"
                        style="@style/textInputEt"
                        android:hint="Год изготовления" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ConstrLayoutMeterage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomAppBar"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp"
        android:layout_gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:menu="@menu/bottom_nav_menu"/>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSilovoyTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/c1"
        android:backgroundTint="@color/c3_light"
        android:src="@drawable/ic_save"
        app:backgroundTint="#FFFFFF"
        app:layout_anchor="@id/bottomAppBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>